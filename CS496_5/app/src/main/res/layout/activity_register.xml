<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.q.cs496_5.Register">

    <EditText
        android:hint="PHONE NUMBER"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:id="@+id/RPhone"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="NAME"
        android:ems="10"
        android:id="@+id/RName"
        android:layout_below="@+id/RPhone"
        android:layout_centerHorizontal="true" />

    <EditText
        android:hint="ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/RId"
        android:layout_below="@+id/RName"
        android:layout_centerHorizontal="true" />

    <EditText
        android:hint="PASSWORD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/RPw"
        android:layout_below="@+id/RId"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="register"
        android:id="@+id/Rbtn"
        android:layout_below="@+id/RPw"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/RMsg"
        android:layout_marginLeft="10dp"
        android:textColor="#990000"
        android:layout_below="@+id/RPw"
        android:layout_alignLeft="@+id/RPhone"
        android:layout_alignStart="@+id/RPhone" />

</RelativeLayout>
