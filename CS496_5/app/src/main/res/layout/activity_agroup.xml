<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.q.cs496_5.AGroup">

    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/a_group_label"
        android:id="@+id/textView4"
        android:background="@color/colorLabel"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/mDate"
        android:layout_alignTop="@+id/textView4"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4" />
    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="Due"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/a_group_label"
        android:background="@color/colorLabel"
        android:id="@+id/textView7"
        android:layout_above="@+id/textView5"
        android:layout_toRightOf="@+id/mDate"
        android:layout_toEndOf="@+id/mDate" />


    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/a_group_label"
        android:background="@color/colorLabel"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="115dp"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content"
        android:id="@+id/mTitle"
        android:layout_alignTop="@+id/textView5"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text= "&#65510;"

        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/a_group_label"
        android:background="@color/colorLabel"
        android:id="@+id/textView6"
        android:layout_alignTop="@+id/mTitle"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />

    <TextView

        android:text="New Text"
        android:layout_width="115dp"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content"
        android:id="@+id/mPrice"
        android:layout_alignTop="@+id/textView6"
        android:layout_toRightOf="@+id/textView6"
        android:layout_toEndOf="@+id/textView6" />


    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/a_group_label"
        android:background="@color/colorLabel"
        android:text="Account"
        android:id="@+id/textView8"
        android:layout_below="@+id/mTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bank"
        android:textSize="@dimen/a_group_label"
        android:id="@+id/mBank"
        android:layout_toRightOf="@+id/textView8"
        android:layout_toEndOf="@+id/textView8"
        android:layout_alignTop="@+id/textView8" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/mDue"
        android:layout_alignTop="@+id/textView7"
        android:layout_toRightOf="@+id/textView7"
        android:layout_toEndOf="@+id/textView7" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Have to Pay"
        android:id="@+id/textView11"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/a_group_label"
        android:background="@color/colorLabel"
        android:layout_below="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/mHavetoPay"
        android:layout_alignTop="@+id/textView11"
        android:layout_alignLeft="@+id/mBank"
        android:layout_alignStart="@+id/mBank" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="Host"
        android:id="@+id/textView13"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/a_group_label"
        android:layout_marginTop="10dp"

        android:background="@color/colorLabel"
        android:layout_below="@+id/textView11"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/mHost"
        android:layout_alignTop="@+id/textView13"
        android:layout_alignLeft="@+id/mTitle"
        android:layout_alignStart="@+id/mTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Select Paid Date"
        android:id="@+id/mSendDate"
        android:onClick="showDatePickerDialog"
        android:layout_below="@+id/textView13"
        android:layout_alignLeft="@+id/pushBtn"
        android:layout_alignStart="@+id/pushBtn"
        android:layout_marginTop="144dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Push to Host"
        android:id="@+id/pushBtn"
        android:layout_below="@+id/mSendDate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp" />





</RelativeLayout>
