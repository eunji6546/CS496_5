<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.q.cs496_5.AGroup">

    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:id="@+id/textView4"
        android:background="@color/colorLabel"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/mDate"
        android:layout_alignTop="@+id/textView4"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4" />
    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="Due"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:background="@color/colorLabel"
        android:id="@+id/textView7"
        android:layout_above="@+id/textView5"
        android:layout_toRightOf="@+id/mDate"
        android:layout_toEndOf="@+id/mDate" />


    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:background="@color/colorLabel"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginTop="10dp"/>

    <EditText
        android:layout_width="120dp"
        android:layout_marginLeft="5dp"
        android:layout_height="37dp"
        android:id="@+id/mTitle"
        android:layout_alignTop="@+id/textView5"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text= "&#65510;"

        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:background="@color/colorLabel"
        android:layout_marginTop="5dp"
        android:id="@+id/textView6"
        android:layout_below="@+id/mTitle"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />
    <EditText
        android:layout_width="150dp"
        android:layout_height="37dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText2"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignLeft="@+id/mTitle"
        android:layout_alignStart="@+id/mTitle" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        android:background="@color/colorLabel"
        android:text="Account"
        android:id="@+id/textView8"
        android:layout_below="@+id/textView6"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText3"
        android:layout_below="@+id/textView8"
        android:layout_alignLeft="@+id/editText2"
        android:layout_alignStart="@+id/editText2" />

    <TextView
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bank"
        android:textSize="25dp"
        android:id="@+id/bankBtn"
        android:layout_below="@+id/textView8"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:onClick="showBankPickerDialog"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/mDue"
        android:layout_alignTop="@+id/textView7"
        android:layout_toRightOf="@+id/textView7"
        android:layout_toEndOf="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Period of Push Alarm After Due Date"
        android:textColor="#999999"
        android:id="@+id/textView9"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/bankBtn"
        android:layout_alignStart="@+id/bankBtn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Period"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:background="@color/colorLabel"
        android:id="@+id/textView10"
        android:layout_below="@+id/textView9"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Per # Hour"
        android:id="@+id/mPeriod"
        android:textSize="22dp"
        android:layout_alignBottom="@+id/textView10"
        android:layout_toRightOf="@+id/textView10"
        android:layout_toEndOf="@+id/textView10"
        android:layout_marginLeft="5dp"
        android:onClick="showPeriodPickerDialog"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Member"
        android:id="@+id/textView11"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:textSize="25dp"
        android:background="@color/colorLabel"
        android:layout_below="@+id/textView10"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10" />


    <ScrollView
        android:layout_width="150dp"
        android:layout_marginLeft="10dp"
        android:layout_height="100dp"
        android:id="@+id/scrollView"
        android:layout_alignTop="@+id/textView11"
        android:layout_toRightOf="@+id/textView11"
        android:layout_toEndOf="@+id/textView11" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/members"
            />
    </ScrollView>



</RelativeLayout>
